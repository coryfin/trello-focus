{
  "manifest_version": 3,
  "name": "Trello Focus Mode",
  "description": "Enable focus mode on a Trello list.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://trello.com/*"],
      "css": ["styles.css"]
    }
  ]
}
